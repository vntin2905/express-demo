extends ../layout/common.pug
block content
    h1 
        span User List 
        a.btn.btn-primary(href="/users/create") New 
    .d-flex.align-items-center
        form.ms-auto(action='/users/search',method='GET', class="d-flex")
            input(type="text",name='q',value= query, class="form-control")
            button(class="btn btn-primary ms-1") Search

    table.table 
        tr 
            th Avatar
            th Name 
            th Phone 
            th Actions 
         
        each user in users 
            tr
                td
                    img(src= user.avatar,width="64")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-primary.btn-light(href="/users/" + user.id) View