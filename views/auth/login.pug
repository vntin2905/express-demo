extends ../layout/common.pug
block content
    h1 Login
    if errors
        each error in errors 
            .alert.alert-danger= error
    form(method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text",name="email", value= values ? values.email : '')
        .form-group
            label(for="password") Password
            input#password.form-control(type="text",name="password", value= values ? values.password : '')
        button.btn.btn-primary.mt-3 Login